<div class="anime-search-bar">
    <div class="search-input-wrapper">
        {{d-icon "magnifying-glass"}}
        <input type="text" value={{@value}} placeholder="Search for Anime..." {{on "input" this.onInput}}
            {{on "keypress" this.onKeyPress}} />
        {{#if @value}}
        <button type="button" class="btn-clear" {{on "click" this.clearSearch}}>
            {{d-icon "times"}}
        </button>
        {{/if}}
    </div>
</div>