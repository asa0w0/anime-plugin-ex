                {{/each}}
                {{#unless this.dropped.length}}
                <p class="empty-group-msg">No anime in this list.</p>
                {{/unless}}
            </div>
        </div>
    </div>
    {{else}}
    <div class="no-items">
        <p>Your watchlist is empty. Go to an anime page to add one!</p>
        <a href="/anime" class="btn btn-primary">Browse Anime</a>
    </div>
    {{/if}}
</div>